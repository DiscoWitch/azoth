        play_only_if_visible="1">
    </AudioComponent>

    <ParticleEmitterComponent emitted_material_name="ink"
        delay_frames="0"
        gravity.y="0.0"
        lifetime_min="8"
        lifetime_max="15"
        count_min="15"
        count_max="15"
        render_on_grid="1"
        fade_based_on_lifetime="1"
        area_circle_radius.min="0"
        area_circle_radius.max="0"
        cosmetic_force_create="0"
        airflow_force="1.5"
        airflow_time="1.01"
        airflow_scale="0.05"
        emission_interval_min_frames="1"
        emission_interval_max_frames="1"
        emit_cosmetic_particles="1"
        image_animation_file="mods/azoth/files/items/palestone/palespawn.png"
        image_animation_speed="5"
        image_animation_loop="0"
        is_emitting="1">
    </ParticleEmitterComponent>

    <ParticleEmitterComponent emitted_material_name="spark_white"
        delay_frames="60"
        gravity.y="0.0"
        lifetime_min="8"
        lifetime_max="15"
        count_min="15"
        count_max="15"
        render_on_grid="1"
        fade_based_on_lifetime="1"
        area_circle_radius.min="0"
        area_circle_radius.max="0"
        cosmetic_force_create="0"
        airflow_force="0.25"
        airflow_time="1.01"
        airflow_scale="0.05"
        emission_interval_min_frames="1"
        emission_interval_max_frames="1"
        emit_cosmetic_particles="1"
        image_animation_file="mods/azoth/files/items/palestone/palespawn_reverse.png"
        image_animation_speed="3"
        image_animation_loop="0"
        is_emitting="1">
    </ParticleEmitterComponent>


    <LuaComponent execute_every_n_frame="-1"
        execute_on_removed="1"
        script_source_file="mods/azoth/files/lib/spawn_entity.lua" />

    <VariableStorageComponent _tags="
        to_spawn,enabled_in_world,enabled_in_hand,enabled_in_inventory"
        value_string="mods/azoth/files/items/palestone/palestone.xml" />

    <MagicConvertMaterialComponent _enabled="1"
        kill_when_finished="0"
        from_material="pale_spawner"
        to_material="air"
        is_circle="1"
        steps_per_frame="50"
        radius="50"
        loop="0" />

    <MagicConvertMaterialComponent _enabled="1"
        kill_when_finished="0"
        from_any_material="1"
        to_material="air"
        is_circle="1"
        steps_per_frame="1"
        radius="50"
        loop="0" />
</Entity>


<Entity tags="teleportable_NOT,rope">

    <Base file="data/entities/base_projectile.xml">
        <VelocityComponent gravity_y="200"
            air_friction="1.7"
            mass="0.04" />
    </Base>

    <InheritTransformComponent only_position="1">
        <Transform position.x="0"
            position.y="0">
        </Transform>
    </InheritTransformComponent>

    <CameraBoundComponent max_count="20"
        distance="500"
        freeze_on_distance_kill="0"
        freeze_on_max_count_kill="0" />

    <ProjectileComponent _tags="in_flight"
        _enabled="1"
        speed_min="800"
        speed_max="800"
        on_collision_die="0"
        damage="0"
        velocity_sets_rotation="0" />

    <ParticleEmitterComponent _tags="in_flight"
        _enabled="1"
        emitted_material_name="spark_white_bright"
        count_min="1"
        count_max="10"
        lifetime_min="1"
        lifetime_max="1"
        is_trail="1"
        trail_gap="0"
        render_on_grid="1"
        fade_based_on_lifetime="1"
        airflow_force="0"
        airflow_time="0"
        airflow_scale="0"
        emission_interval_min_frames="1"
        emission_interval_max_frames="1"
        emit_cosmetic_particles="1"
        is_emitting="1"
        draw_as_long="1" />

    <ParticleEmitterComponent _tags="no_connect"
        _enabled="0"
        emitted_material_name="spark_red"
        gravity.y="0"
        area_circle_radius.min="5"
        area_circle_radius.max="5"
        attractor_force="30"
        count_min="3"
        count_max="3"
        lifetime_min="1"
        lifetime_max="1"
        is_trail="0"
        render_on_grid="1"
        fade_based_on_lifetime="1"
        emission_interval_min_frames="1"
        emission_interval_max_frames="1"
        emit_cosmetic_particles="1"
        is_emitting="1"
        draw_as_long="1"
        collide_with_grid="0" />

    <ParticleEmitterComponent _tags="connect"
        _enabled="0"
        emitted_material_name="gold_molten"
        gravity.y="0"
        area_circle_radius.min="0"
        area_circle_radius.max="3"
        attractor_force="300"
        x_vel_min="200"
        x_vel_max="400"
        y_vel_min="0"
        y_vel_max="0"
        x_pos_offset_min="0"
        x_pos_offset_max="0"
        count_min="10"
        count_max="10"
        lifetime_min="0.1"
        lifetime_max="0.25"
        render_on_grid="1"
        fade_based_on_lifetime="1"
        emission_interval_min_frames="1"
        emission_interval_max_frames="1"
        emit_cosmetic_particles="1"
        collide_with_grid="0"
        draw_as_long="1" />

    <LuaComponent execute_on_added="1"
        execute_every_n_frame="1"
        script_source_file="mods/azoth/files/actions/tether/tether.lua" />

    <CollisionTriggerComponent _tags="in_flight"
        width="16"
        height="16"
        radius="16"
        destroy_this_entity_when_triggered="0" />

    <LuaComponent execute_every_n_frame="-1"
        remove_after_executed="1"
        script_collision_trigger_hit="mods/azoth/files/actions/tether/tether.lua" />

    <AudioLoopComponent _tags="enabled_in_world"
        file="data/audio/Desktop/misc.bank"
        event_name="misc/moon/movement_loop_world"
        set_speed_parameter="1"
        auto_play="1"
        play_on_component_enable="1" />

    <AudioLoopComponent _tags="enabled_in_hand"
        file="data/audio/Desktop/misc.bank"
        event_name="misc/moon/movement_loop_hand"
        set_speed_parameter="1"
        auto_play="1"
        play_on_component_enable="1" />
</Entity>

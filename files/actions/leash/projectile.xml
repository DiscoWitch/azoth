<Entity tags="teleportable_NOT,rope">

    <Base file="data/entities/base_projectile.xml">
        <VelocityComponent gravity_y="200"
            air_friction="1.7"
            mass="0.04" />
    </Base>

    <ProjectileComponent _tags="in_flight"
        _enabled="1"
        speed_min="800"
        speed_max="800"
        on_collision_die="0"
        damage="0" />

    <LifetimeComponent lifetime="1800" />

    <ParticleEmitterComponent _tags="in_flight"
        _enabled="1"
        emitted_material_name="spark_white_bright"
        count_min="5"
        count_max="5"
        lifetime_min="1"
        lifetime_max="1"
        is_trail="1"
        trail_gap="0"
        render_on_grid="1"
        fade_based_on_lifetime="1"
        airflow_force="0"
        airflow_time="0"
        airflow_scale="0"
        emission_interval_min_frames="1"
        emission_interval_max_frames="1"
        emit_cosmetic_particles="1"
        is_emitting="1"
        draw_as_long="1" />

    <ParticleEmitterComponent _tags="connect"
        _enabled="0"
        emitted_material_name="spark_purple_bright"
        gravity.y="0"
        x_pos_offset_min="0"
        x_pos_offset_max="0"
        x_vel_min="10"
        x_vel_max="100"
        y_vel_min="-1"
        y_vel_max="1"
        count_min="20"
        count_max="20"
        lifetime_min="0.3"
        lifetime_max="0.3"
        is_trail="0"
        render_on_grid="1"
        fade_based_on_lifetime="1"
        emission_interval_min_frames="1"
        emission_interval_max_frames="1"
        emit_cosmetic_particles="1"
        is_emitting="1"
        draw_as_long="1"
        collide_with_grid="0" />

    <LuaComponent execute_on_added="1"
        execute_every_n_frame="1"
        script_source_file="mods/azoth/files/actions/leash/leash.lua" />

    <CollisionTriggerComponent width="16"
        height="16"
        radius="16"
        destroy_this_entity_when_triggered="0" />

    <LuaComponent execute_every_n_frame="-1"
        remove_after_executed="1"
        script_collision_trigger_hit="mods/azoth/files/actions/leash/leash.lua" />

    <AudioLoopComponent _tags="enabled_in_world"
        file="data/audio/Desktop/misc.bank"
        event_name="misc/moon/movement_loop_world"
        set_speed_parameter="1"
        auto_play="1"
        play_on_component_enable="1" />

    <AudioLoopComponent _tags="enabled_in_hand"
        file="data/audio/Desktop/misc.bank"
        event_name="misc/moon/movement_loop_hand"
        set_speed_parameter="1"
        auto_play="1"
        play_on_component_enable="1" />
</Entity>
